<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://kit.fontawesome.com/c6f4b89e6b.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <title>My Notes App</title>
</head>
<body>
    <div class="container">
        <!-- header -->
        <header class="header">
            <nav class="nav">
                <ul>
                    <li class="nav-element focus"><a href="/">All Notes</a></li>
                    <li class="nav-element"><a href="/personal">Personal</a></li>
                    <li class="nav-element"><a href="/work">Work</a></li>
                    <li class="nav-element"><a href="/important">Important</a></li>
                    <li class="nav-element"><a href="/other">Other</a></li>
                </ul>
            </nav>
            <ul>
                <li class="nav-element focus"><a href="/add">Add Note</a></li>
            </ul>
        </header>
        <!-- /header -->
        <!-- main -->
        <main class="main">
            <% for (const note of notes) { %>
            <div class="note">
                <span class="side-line bg-<%= note.color %>"></span>
                <div class="note-titles">
                    <h2 class="note-title"><%= note.title %><span class="circle <%= note.color %>"><i class="fa-solid fa-circle"></i></span></h2>
                    <h3 class="note-subtitle"><%= note.date %></h3>
                </div>
                <p><%= note.description %></p>
                <div class="note-bottom">
                        <span class="modify"><a href="/edit/<%= note.id %>"><i class="fa-solid fa-pen"></i></a></span>
                        <span class="modify"><a href="/remove/<%=note.id %>"><i class="fa-solid fa-trash-can"></i></a></span>   
                </div>
            </div>
            <% } %>
        </main>
        <!-- /main -->
    </div>
</body>
</html>