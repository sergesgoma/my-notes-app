<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://kit.fontawesome.com/c6f4b89e6b.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <title>My Notes App</title>
</head>
<body>
    <div class="container">
        <header class="header">
            <nav class="nav">
                <ul>
                    <li class="nav-element focus white uppercase">Edit Note</li>
                </ul>
            </nav>
            <ul>
                <li class="nav-element"><a href="/">Return</a></li>
            </ul>
        </header>
        <div class="note add-note-div">
            <% notes.forEach(details => { %>
            <form action="/edit/<%= details._id%>" method="post">
                <% if (details._id == idNote ) { %>
                <label for="title">Note Title</label>
                <input type="text" name="title" id="title" value="<%=details.title%>" class="my-10">
                <label for="date">Note Date</label>
                <input type="text" name="date" id="date" value="<%=details.date%>" class="my-10">
                <label for="description">Note Description</label>
                <input type="text" name="description" id="description" value="<%=details.description%>" class="my-10">
                <p>Select a category:</p>
                <div>
                    <input type="radio" name="color" id="red" value="red" class="my-10">
                    <label for="red">Personal</label>
                </div>
                <div>
                    <input type="radio" name="color" id="green" value="green" class="my-10">
                    <label for="green">Work</label>
                </div>
                <div>
                    <input type="radio" name="color" id="blue" value="blue" class="my-10">
                    <label for="blue">Important</label>
                </div>
                <div>
                    <input type="radio" name="color" id="grey" value="grey" class="my-10">
                    <label for="grey">Other</label>
                </div>
                <button type="submit" class="btn">Edit</button>
                <% } %>
                
        </form>
        <% }) %>
        </div>

        
    </div>
</body>
</html>